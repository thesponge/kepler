<div class="v50"></div>

<div class="row submission-header">
  <div class="col s12">
    <h5>
      {{model.title}}
      <small>
        <span class="right deep-orange-text text-lighten-2"><small><i>{{model.state}}</i></small></span>
      </small>
    </h5>
  </div>
  <div class="col s12">
    <div class="row">
      <div class="col s6" style="padding-left: 0px;">
        <p class="byline">
            {{#link-to "account.show" model.user.account.id}}
                {{#tool-tipster content=(libravatar-src email=model.user.email size=70) position='bottom' contentAsHTML=true}}
                    {{model.user.account.computed_display_name}}
                {{/tool-tipster}}
            {{/link-to}}
            posted this 
            {{#tool-tipster title=model.created_at position='bottom'}} {{model.created}} {{/tool-tipster}}
        </p>
      </div>
      <div class="col s6" style="padding-right: 0px;">
        {{#md-btn-dropdown text='Actions' belowOrigin=true class='right'}}
            <li>{{link-to 'Automatch users' 'match'}}</li>
            <li class="divider"></li>
            <li>{{link-to 'Edit' 'match'}}</li>
            <li>{{link-to 'Delete' 'match'}}</li>
            <li class="divider"></li>
            <li>{{link-to 'Share' 'match'}}</li>
        {{/md-btn-dropdown}}
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <p>{{{model.formatted_description}}}</p>
  </div>
</div>